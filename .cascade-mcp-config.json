{
  "tools": [
    {
      "name": "mcp0_list_templates",
      "description": "List templates in Harness.",
      "parameters": {
        "properties": {
          "org_id": {
            "description": "Required ID of the organization.",
            "type": "string"
          },
          "project_id": {
            "description": "Required ID of the project.",
            "type": "string"
          },
          "page": {
            "description": "Page number for pagination - page 0 is the first page",
            "default": 0,
            "type": "number"
          },
          "size": {
            "description": "Number of items per page",
            "default": 5,
            "maximum": 20,
            "type": "number"
          },
          "search": {
            "description": "Optional search term to filter templates",
            "type": "string"
          },
          "template_list_type": {
            "description": "Optional type of template list (e.g., LastUpdated)",
            "type": "string"
          },
          "sort": {
            "description": "Optional sort order (e.g., lastUpdatedAt,DESC)",
            "type": "string"
          }
        },
        "type": "object"
      }
    },
    {
      "name": "mcp0_get_template",
      "description": "Get details of a specific template in Harness.",
      "parameters": {
        "properties": {
          "org_id": {
            "description": "Required ID of the organization.",
            "type": "string"
          },
          "project_id": {
            "description": "Required ID of the project.",
            "type": "string"
          },
          "template_identifier": {
            "description": "The identifier of the template",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  ]
}
